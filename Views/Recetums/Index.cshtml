@model IEnumerable<proyectoFinal.Models.Recetum>

@{
    ViewData["Title"] = "Listado de recetas";
}

<div class="d-flex justify-content-between align-items-center">
    <h2>Lista de recetas</h2>
    <form class="d-flex gap-2" asp-asp-controller="Recetums" asp-action="Index">
        <div class="d-flex align-items-center gap-2">
            <input type="text" name="search" class="form-control">
            <input type="submit" value="Buscar" class="btn btn-primary" />
        </div>
    </form>
</div>
<hr />
<div class="d-grid  overflow-x-hidden">
    <div
        class="row row-cols-1 justify-content-center row-cols-lg-3 gy-2 gap-2 overflow-x-hidden  justify-content-lg-start receta-container ">
        @foreach (var item in Model)
        {
            <div class="card">
                <div class="card-body d-flex flex-column ">
                    <h5 class="card-title text-capitalize">@Html.DisplayFor(modelItem => item.NombrePaciente)
                        @Html.DisplayFor(modelItem =>
                                 item.ApellidoPaciente)</h5>
                    <p class="card-text"><strong>Teléfono:</strong> @Html.DisplayFor(modelItem => item.TelefonoPaciente)</p>
                    <p class="card-text"><strong>Dirección:</strong> @Html.DisplayFor(modelItem => item.DireccionPaciente)
                    </p>
                    <p class="card-text"><strong>Fecha:</strong> @Html.DisplayFor(modelItem => item.Fecha)</p>
                    <p class="card-text text-capitalize"><strong>Doctor:</strong> Dr. @Html.DisplayFor(modelItem =>
                    item.NombreDoctor)</p>
                    <p class="card-text text-truncate text-capitalize"><strong>Medicamentos:</strong>
                        @Html.DisplayFor(modelItem => item.Medicamentos)</p>
                    <div class="mt-auto card-footer d-flex justify-content-around">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-block">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-block">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-block">Borrar</a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
