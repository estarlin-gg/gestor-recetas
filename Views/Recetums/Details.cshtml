@model proyectoFinal.Models.Recetum

@{
    ViewData["Title"] = "Detalles de receta";
}

<h2>Detalles</h2>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombrePaciente)
        </dd>
        <dt class="col-sm-2">
            Apellidos
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApellidoPaciente)
        </dd>
        <dt class="col-sm-2">
            Telefono
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TelefonoPaciente)
        </dd>
        <dt class="col-sm-2">
            Direccion
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DireccionPaciente)
        </dd>
        <dt class="col-sm-2">
            Fecha
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            Doctor
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreDoctor)
        </dd>
        <dt class="col-sm-2">
            Medicamentos
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Medicamentos)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a class="btn btn-success" asp-action="Print" asp-route-id="@Model?.Id" target="_blank">Imprimir</a> |
    <a asp-action="Index">Regresar</a>
</div>
