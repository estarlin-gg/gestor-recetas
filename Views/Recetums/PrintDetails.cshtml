@model proyectoFinal.Models.Recetum

@{
    ViewData["Title"] = "Detalles de receta para impresión";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
     @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
</head>



<div class="vw-100">
    <h2 class="text-danger">Nombre del hospital</h2>
    <hr>
</div>
<div class="container ">
    <h2 class="text-center">Receta</h2>
    <div class="row my-2">
        <div class="col-sm-6">
            <strong>Paciente:</strong> @Model.NombrePaciente @Model.ApellidoPaciente
        </div>
    </div>
    <div class="row my-2">
        <div class="col-sm-6">
            <strong>Teléfono:</strong> @Model.TelefonoPaciente
        </div>
        <div class="col-sm-6">
            <strong>Dirección:</strong> @Model.DireccionPaciente
        </div>
    </div>
    <div class="row my-2">
        <div class="col-sm-6">
            <strong>Fecha:</strong> @Model.Fecha
        </div>
        <div class="col-sm-6">
            <strong>Doctor:</strong> @Model.NombreDoctor
        </div>
    </div>
    <div class="row my-2">
        <div class="col-sm-12">
            <strong>Medicamentos:</strong> @Model.Medicamentos
        </div>
    </div>
</div>
